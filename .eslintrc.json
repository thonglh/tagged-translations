{
  "extends": ["prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false
      }
    ],
    "prefer-const": "error",
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ],
    "dot-notation": ["error"],
    "no-unused-vars": [
      "error",
      { "args": "after-used", "ignoreRestSiblings": true }
    ],
    "object-shorthand": ["error", "always"]
  },
  "parserOptions": {
    "ecmaVersion": 6
  }
}
